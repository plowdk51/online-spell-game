</div>

<div style="float:left;">
	@Html.Partial("Caster", "1")
</div>

<div class="clear"></div>

<div id="caster-btns-1" style="position:absolute; z-index:990; bottom:0; width:200px; height:240px; left:25%">
	@Html.Partial("ActionButtons")
</div>

